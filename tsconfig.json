{
    "compilerOptions": {
       "lib": [
          "es6",
          "es7",
          "esnext.asynciterable"
       ],
       "target": "es2015",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "resolveJsonModule": true,
       "sourceMap": true,
       "allowJs": true,
       "typeRoots": ["types", "node_modules/@types"],
       "esModuleInterop": true
    }
 }